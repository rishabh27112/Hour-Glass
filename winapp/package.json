{
  "name": "hourglass",
  "private": true,
  "version": "0.0.0",
  "main": "dist-electron/main.js",
  "build": {
    "appId": "com.hourglass.desktop",
    "productName": "Hour Glass",
    "asar": false,
    "directories": {
      "output": "build"
    },
    "files": [
      "dist-electron",
      "dist-react",
      "public"
    ],
    "win": {
      "icon": "public/logo.ico",
      "target": ["portable"]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "scripts": {
    "transpile:electron": "tsc -p src/electron/tsconfig.json",
    "dev:react": "cd ../Frontend && npm start",
    "dev:electron": "npm run transpile:electron && cross-env NODE_ENV=development electron .",
    "dev": "npm-run-all --parallel dev:react dev:electron",
    "sync-frontend": "node sync-frontend-build.js",
    "build": "cd ../Frontend && npm run build && cd ../winapp && npm run sync-frontend && npm run transpile:electron",
    "start": "cross-env NODE_ENV=production electron .",
    "dist:win": "npm run build && electron-builder --win --x64",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "mutation": "stryker run"
  },
  "dependencies": {
    "active-win": "^8.2.1",
    "os-utils": "^0.0.14",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "recharts": "^3.2.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@stryker-mutator/core": "^9.3.0",
    "@stryker-mutator/vitest-runner": "^9.3.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.0.0",
    "@types/active-win": "^4.0.0",
    "@types/os-utils": "^0.0.4",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.3",
    "@vitest/coverage-v8": "^3.0.0",
    "cross-env": "^10.0.0",
    "electron": "^38.1.2",
    "electron-builder": "^26.0.12",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.4.0",
    "jsdom": "^26.0.0",
    "npm-run-all": "^4.1.5",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.44.0",
    "vite": "npm:rolldown-vite@7.1.12",
    "vitest": "^3.0.0"
  },
  "overrides": {
    "vite": "npm:rolldown-vite@7.1.12"
  }
}
